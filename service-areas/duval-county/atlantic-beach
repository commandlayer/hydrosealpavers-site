      <script>
        // Only one FAQ open at a time
        (function () {
          const faq = document.querySelector('#atlantic-beach-faq');
          if (!faq) return;

          const items = faq.querySelectorAll('details');
          items.forEach(item => {
            item.addEventListener('toggle', () => {
              if (!item.open) return;
              items.forEach(other => {
                if (other !== item) other.removeAttribute('open');
              });
            });
          });
        })();
